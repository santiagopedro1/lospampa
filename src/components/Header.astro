---
import HeaderLink from './HeaderLink.astro';
import { SITE_TITLE } from '../consts';
---

<header class="mb-6 px-12 py-4">
	<nav class="relative flex items-center justify-center">
		<a
			href="/"
			class="absolute left-0 flex items-center gap-1 px-4 py-2"
		>
			<img
				src="/lospampa.png"
				alt=""
				class="h-8 w-8"
			/>
			<h1 class="font-bold">{SITE_TITLE}</h1>
		</a>
		<div class="space-x-2">
			<HeaderLink href="/projetos">Projetos</HeaderLink>
			<HeaderLink href="/publicacoes">Publicações</HeaderLink>
		</div>
	</nav>
</header>
