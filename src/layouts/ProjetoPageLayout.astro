---
import LinkButton from '@components/LinkButton.astro';
import Layout from '@layouts/Layout.astro';
import type { MdFrontmatter } from '@src/types';

type Props = MdFrontmatter;

const { title, description, externalLinks, heroImage } = Astro.props;
---

<Layout>
	<article>
		<div class="grid place-items-center">
			{
				heroImage && (
					<img
						src={heroImage}
						width={600}
						alt="Imagem Foda"
					/>
				)
			}
		</div>
		<div class="space-y-6 py-16">
			<h1 class="text-8xl font-bold">{title}</h1>
			<p>{description}</p>
			<hr />
			{
				externalLinks && (
					<div class="flex gap-8">
						{externalLinks.map(({ name, url }) => (
							<LinkButton
								name={name}
								url={url}
							/>
						))}
					</div>
				)
			}
		</div>
		<div class="prose prose-xl prose-neutral px-12 dark:prose-invert">
			<slot />
		</div>
	</article>
</Layout>
