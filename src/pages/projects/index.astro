---
import Default from '$lib/layouts/Default.astro';
import ProjectCard from '$lib/components/project-card.astro';

import { getCollection } from 'astro:content';

const projects = await getCollection('projects');
---

<Default titleAppend="Projects">
	<section class="grid gap-8">
		<h1 class="text-4xl font-bold">Projects</h1>
		<p>Here is a list of all our current and past projects.</p>

		<ul class="grid grid-cols-1 items-center gap-16 md:grid-cols-2">
			{
				projects.map(({ data, slug }) => (
					<li>
						<ProjectCard
							{data}
							{slug}
						/>
					</li>
				))
			}
		</ul>
	</section>
</Default>
